@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<body style="background-color:#191d24;margin:auto">
<h1 style="color:white">@ViewData["Title"]</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden"/>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Email" class="form-label" style="color:white"></label>
                <span asp-validation-for="Input.Email" class="text-danger" style="color:white"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Password" class="form-label" style="color:white"></label>
                <span asp-validation-for="Input.Password" class="text-danger" style="color:white"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                       aria-required="true"/>
                <label asp-for="Input.ConfirmPassword" class="form-label" style="color:white"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="color:white"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset</button>
        </form>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
